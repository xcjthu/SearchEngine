<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
    <servlet>
        <servlet-name>ImageServer</servlet-name>
        <servlet-class>mypkg.ImageServer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageServer</servlet-name>
        <url-pattern>/servlet/ImageServer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ImageSearchServer</servlet-name>
        <servlet-class>mypkg.ImageSearchServer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageSearchServer</servlet-name>
        <url-pattern>/servlet/ImageSearchServer</url-pattern>
    </servlet-mapping>
	
</web-app>